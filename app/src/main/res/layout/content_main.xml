<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    tools:context="co.ghola.smogalert.MainActivity"
    tools:showIn="@layout/app_bar_main">

    <LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="?attr/actionBarSize"
    android:orientation="vertical"
    android:id="@+id/linearLayout1">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_below="@+id/linearLayout2"
        android:id="@+id/linearLayout3">
        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <android.support.v4.view.ViewPager
                android:id="@+id/vpPager"
                android:layout_width="match_parent"
                android:layout_height="151dp"
                android:layout_gravity="top"
                android:background="#4FC3F7" />


            <ImageView
                android:id="@+id/left_nav"
                android:layout_width="38dp"
                android:layout_height="38dp"
                android:layout_gravity="center_vertical|left"
                android:src="@drawable/ic_keyboard_arrow_left_white_24dp" />

            <ImageView
                android:id="@+id/right_nav"
                android:layout_width="38dp"
                android:layout_height="38dp"
                android:layout_gravity="center_vertical|right"
                android:src="@drawable/ic_keyboard_arrow_right_white_24dp" />

            <com.viewpagerindicator.CirclePageIndicator
                android:id="@+id/indicator"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#4FC3F7"
                android:layout_gravity="bottom"/>
        </FrameLayout>

    </LinearLayout>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="?attr/actionBarSize"
        android:orientation="vertical"
        android:id="@+id/linearLayout">
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_below="@+id/linearLayout1"
            android:id="@+id/linearLayout2">
            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <android.support.v4.view.ViewPager
                    android:id="@+id/vpPager2"
                    android:layout_width="match_parent"
                    android:layout_height="189dp"
                    android:layout_gravity="top" />


                <ImageView
                    android:id="@+id/left_nav2"
                    android:layout_width="38dp"
                    android:layout_height="38dp"
                    android:layout_gravity="center_vertical|left"
                    android:src="@drawable/ic_arrow_left_black" />

                <ImageView
                    android:id="@+id/right_nav2"
                    android:layout_width="38dp"
                    android:layout_height="38dp"
                    android:layout_gravity="center_vertical|right"
                    android:src="@drawable/ic_keyboard_arrow_right_white_24dp" />

                <com.viewpagerindicator.CirclePageIndicator
                    android:id="@+id/indicator2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="#00B2B1"
                    android:layout_gravity="bottom"/>
            </FrameLayout>

        </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:id="@+id/linearLayout5"
        android:layout_alignParentBottom="true"
        android:layout_below="@+id/linearLayout2">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_below="@+id/linearLayout2"
            android:id="@+id/linearLayout4">
            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <android.support.v4.view.ViewPager
                    android:id="@+id/vpPager3"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_gravity="top"
                    android:background="#528" />


                <ImageView
                    android:id="@+id/left_nav3"
                    android:layout_width="38dp"
                    android:layout_height="38dp"
                    android:layout_gravity="center_vertical|left"
                    android:src="@drawable/ic_keyboard_arrow_left_white_24dp" />

                <ImageView
                    android:id="@+id/right_nav3"
                    android:layout_width="38dp"
                    android:layout_height="38dp"
                    android:layout_gravity="center_vertical|right"
                    android:src="@drawable/ic_keyboard_arrow_right_white_24dp" />

                <com.viewpagerindicator.CirclePageIndicator
                    android:id="@+id/indicator3"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="#3F51B5"
                    android:layout_gravity="bottom"/>
            </FrameLayout>

        </LinearLayout>



        </LinearLayout>





</RelativeLayout>
